@*@model IEnumerable<DBMVCFinal.Models.Member>*@


@using PagedList;
@using PagedList.Mvc;
@model IPagedList<DBMVCFinal.Models.Member>

@{
    ViewBag.Title = "MemberIndex";
}

<h2>MemberIndex</h2>
 是否為管理者 : @ViewBag.Man
<p>
    @Html.ActionLink("新建成員", "SignIn", null, htmlAttributes: new { @style = "background-color: #91B0A0; color:white ", @class = "btn btn-default" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.name)*@
                會員編號
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.name)*@
                姓名
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.sex)*@
                性別
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.birthday)*@
                生日
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.phone)*@
                電話
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.email)*@
                電子信箱
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.password)
                </th>*@
            <th>
                @*@Html.DisplayNameFor(model => model.isManager)*@
                身分
            </th>
            <th></th>
        </tr>

    </thead>
    <tbody style="background-color: #E7ECE9 ">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.mId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @if (item.sex == true)
                    {
                        @Html.Raw("男")
                    }
                    else
                    {
                        @Html.Raw("女")
                    }
                    @*@Html.DisplayFor(modelItem => item.sex)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.password)
                    </td>*@
                <td>
                    @if (item.isManager == true)
                    {
                        @Html.Raw("管理者")
                    }
                    else
                    {
                        @Html.Raw("使用者")
                    }
                    @*@Html.DisplayFor(modelItem => item.isManager)*@
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.mId }, htmlAttributes: new { @style = "background-color: #91B0A0; color:white ", @class = "btn btn-default" })
                    @Html.ActionLink("Details", "MemberDetails", new { mId = item.mId }, htmlAttributes: new { @style = "background-color: #91B0A0; color:white ", @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.mId }, htmlAttributes: new { @style = "background-color: #91B0A0; color:white ", @class = "btn btn-default" })
                </td>
            </tr>
        }

    </tbody>

</table>
@Html.PagedListPager(Model, page => Url.Action("MemberIndex", new { page }))


@section topCSS{
    <style>

        body {
            background-color: #CDD5D1;
        }

        /*設定caption*/
        .table > caption {
            margin-top: 10px;
            color: white;
            background-color: #698581;
            font-size: xx-large;
        }

        /*設定thead顏色*/
        .table > thead > tr {
            color: white;
            background-color: #809B8E;
        }

        /*設定tfoot顏色及文字對齊*/
        .table > tfoot > tr {
            color: white;
            background-color: #698581;
        }

        /*設定文字對齊*/
        .table > caption, .table > thead > tr > th, .table > tfoot > tr {
            text-align: center;
        }
    </style>
}